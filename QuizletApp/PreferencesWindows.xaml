<Window x:Class="QuizletApp.PreferencesWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizletApp"
        mc:Ignorable="d"
        Title="PreferencesWindows" Height="180
        " Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Preferences" FontSize="16" FontWeight="Bold" />
            <CheckBox Content="Enable Dark Mode" Name="chkDarkMode" Margin="0,10,0,0"/>
            <CheckBox Content="Enable Question Randomization" Name="chkNotifications" />
            <Button Content="Save" Name="btnSave" Width="80" HorizontalAlignment="Right" Margin="0,20,0,0" Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
